<Window x:Class="DingoConfigurator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DingoConfigurator"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:cd="clr-namespace:CanDevices;assembly=CanDevices"
        xmlns:vm="clr-namespace:DingoConfigurator.ViewModels"
        xmlns:vw="clr-namespace:DingoConfigurator.Views"
        mc:Ignorable="d"
        Title="DingoConfigurator" Height="800" Width="800">
    <Window.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="PdmBrush" Color="Crimson"/>
            <SolidColorBrush x:Key="CanBoardBrush" Color="LightGreen"/>
            <SolidColorBrush x:Key="DashBrush" Color="MediumOrchid"/>

            <sys:Double x:Key="TypeEllipseSize">12</sys:Double>
        </ResourceDictionary>
    </Window.Resources>
    <DockPanel>
        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar>
                <Button Content="New" />
                <Button Content="Open" />
                <Button Content="Save" />
            </ToolBar>
            <ToolBar>
                <Label Content="CAN Interface" 
                       VerticalAlignment="Center" 
                       FontWeight="Bold"
                       Margin="5 0 5 0"/>
                <ComboBox Width="100" 
                          Margin="5 0 5 0"
                          ItemsSource="{Binding Path=Cans}"
                          SelectedItem="{Binding Path=SelectedCan}" 
                          DisplayMemberPath="Name"/>
                <Button Content="Connect"
                        Command="{Binding ConnectBtnCmd}"/>
                <Button Content="Disconnect"
                        Command="{Binding DisconnectBtnCmd}"/>
            </ToolBar>
        </ToolBarTray>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="50" />
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>
            <StatusBarItem HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           HorizontalContentAlignment="Stretch">
                <Rectangle Height="20" 
                           Width="30"
                           Fill="{Binding Path=CanInterfaceStatusFill}"/>
            </StatusBarItem>
            <Separator Grid.Column="1" />
            <StatusBarItem Grid.Column="2"
                           HorizontalAlignment="Left">
                <TextBlock Text="{Binding Path=CanInterfaceStatusText, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" 
                           Margin="5 0 0 0"/>
            </StatusBarItem>
            <Separator Grid.Column="3" />
            <StatusBarItem Grid.Column="4"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center">
                <TextBlock Text="{Binding Path=DeviceCountText, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
            </StatusBarItem>
        </StatusBar>
        <Border BorderBrush="Black" BorderThickness="1">
            <Grid>
                <Grid.Resources>
                    <DataTemplate DataType="{x:Type vm:DingoPdmViewModel}">
                        <vw:DingoPdmView/>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type vm:CanBoardViewModel}">
                        <vw:CanBoardView/>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type vm:DingoDashViewModel}">
                        <vw:DingoDashView/>
                    </DataTemplate>
                </Grid.Resources>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <TreeView Grid.Column="0"
                          ItemsSource="{Binding CanDevices}"
                          SelectedItemChanged="TreeView_SelectedItemChanged">
                    <TreeView.Resources>
                        <HierarchicalDataTemplate DataType="{x:Type cd:DingoPdmCan}">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Height="{StaticResource TypeEllipseSize}" Width="{StaticResource TypeEllipseSize}" Fill="{StaticResource PdmBrush}">
                                    <Ellipse.Style>
                                        <Style TargetType="{x:Type Ellipse}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type cd:DingoPdmCan}}, Path=IsConnected}" Value="True">
                                                    <Setter Property="Opacity" Value="1.0"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type cd:DingoPdmCan}}, Path=IsConnected}" Value="False">
                                                    <Setter Property="Opacity" Value="0.2"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Ellipse.Style>
                                </Ellipse>
                                <TextBlock Text="{Binding Name}"/>
                            </StackPanel>
                        </HierarchicalDataTemplate>
                        <HierarchicalDataTemplate DataType="{x:Type cd:CanBoardCan}">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Height="{StaticResource TypeEllipseSize}" Width="{StaticResource TypeEllipseSize}" Fill="{StaticResource CanBoardBrush}">
                                    <Ellipse.Style>
                                        <Style TargetType="{x:Type Ellipse}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type cd:CanBoardCan}}, Path=IsConnected}" Value="True">
                                                    <Setter Property="Opacity" Value="1.0"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type cd:CanBoardCan}}, Path=IsConnected}" Value="False">
                                                    <Setter Property="Opacity" Value="0.2"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Ellipse.Style>
                                </Ellipse>
                                <TextBlock Text="{Binding Name}"/>
                            </StackPanel>
                        </HierarchicalDataTemplate>
                        <HierarchicalDataTemplate DataType="{x:Type cd:DingoDashCan}">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Height="{StaticResource TypeEllipseSize}" Width="{StaticResource TypeEllipseSize}" Fill="{StaticResource DashBrush}">
                                    <Ellipse.Style>
                                        <Style TargetType="{x:Type Ellipse}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type cd:DingoDashCan}}, Path=IsConnected}" Value="True">
                                                    <Setter Property="Opacity" Value="1.0"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type cd:DingoDashCan}}, Path=IsConnected}" Value="False">
                                                    <Setter Property="Opacity" Value="0.2"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Ellipse.Style>
                                </Ellipse>
                                <TextBlock Text="{Binding Name}"/>
                            </StackPanel>
                        </HierarchicalDataTemplate>
                    </TreeView.Resources>
                </TreeView>
                <GridSplitter Grid.Column="1"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Stretch"
                          Background="Black" 
                          ShowsPreview="True"
                          Width="1"/>
                <ContentControl Content="{Binding CurrentViewModel}" Grid.Column="2"/>
            </Grid>
        </Border>
    </DockPanel>
</Window>
